<UserControl x:Class="SoftwareCo.StatusBarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoftwareCo"
             mc:Ignorable="d" 
             d:DesignHeight="23" Width="23">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"  Name="StatusBar" 
                Background="Transparent"  Click="LaunchDashBoard" Visibility="Visible" >
            <Image Source="Resources\PAW.png" ></Image>
        </Button>
    </Grid>
</UserControl>
